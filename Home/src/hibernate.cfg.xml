<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
	<session-factory >
	  <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
	  <property name="connection.url">jdbc:mysql://localhost:3306/houses?useUnicode=true&amp;characterEncoding=UTF-8</property>
      <property name="connection.username">root</property>
      <property name="connection.password">1234</property>
      <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
      <property name="show_sql">true</property>
      <mapping resource="houses/Base/Admin.hbm.xml"/>
      <mapping resource="houses/Base/Admin_account.hbm.xml"/>
      <mapping resource="houses/Base/Custom_account.hbm.xml"/>
      <mapping resource="houses/Base/Notify.hbm.xml"/>
      <mapping resource="houses/Base/Homes.hbm.xml"/>
      <mapping resource="houses/Base/Maintain.hbm.xml"/>
      <mapping resource="houses/Base/Personnel.hbm.xml"/>
      <mapping resource="houses/Base/Xuncha.hbm.xml"/>
      <mapping resource="houses/Base/Lvhua.hbm.xml"/>
      <mapping resource="houses/Base/Wuyefei.hbm.xml"/>
      <mapping resource="houses/Base/Yezhu.hbm.xml"/>
      <mapping resource="houses/Base/Cars.hbm.xml" />
      <mapping resource="houses/Base/Ts.hbm.xml" />
	</session-factory>
</hibernate-configuration>
